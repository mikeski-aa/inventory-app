extends layout 

block content 
    div(class="main-cont")
        h1=title 
        form(method='POST')
        label(for='name') Category name: 
        br
        input#name.form-control(type='text', placeholder='Enter category name' required value=(undefined===category?'':category.name))
        label(for='desc') Category description: 
        br
        input#desc.form-control(type='text', placeholder='Enter category description' required value=(undefined===category?'':category.desc))
        br
        button.btn.btn-primary(type='submit') Submit 

        if errors 
            ul
             for error in errors
                 li!=error.msg