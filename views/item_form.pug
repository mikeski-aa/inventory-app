extends layout 

block content   
    div(class="main-cont")
        h1=title 
        
        form(method="POST")
            div.form-group 
                label(for="name") Item name: 
                br
                input#name.form-control(type="text", placeholder="Name of item" name="name" required value=(undefined===item ? '' : item.name))
            div.form-group 
                label(for="desc") Item description:
                br
                textarea#desc.form-control(placeholder="Description for item" name="desc" required)=undefined===item ? '' : item.description
            div.form-group 
                label(for="price") Item price:
                br
                input#price.form-control(type="number", placeholder="Item price" name="price" required value=(undefined===item ? '' : item.price))
            div.form-group 
                label(for="stock_num") Number in stock:
                br
                input#stock_num.form-control(type="number", placeholder="Number in stock" name="stock_num" required value=(undefined===item ? '' : item.stock_quant))        
            div.form-group
                        label(for="category") Category: 
                        br
                        select#category.form-control(name="category" required)
                            option(value='') Please select a category 
                            for category in categories 
                                if item 
                                    option(value=item.category_id selected) #{item.category}
 
                                else 
                                    option(value=category.id) #{category.name}  
            button.btn.btn-primary(type='submit') Submit 
            if errors 
                ul 
                    for error in errors 
                        li!= error.msg