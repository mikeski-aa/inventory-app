extends layout 

block content 
    div(class="main-cont")
        h1=title 
        p Select image to upload for this category

        form(method='POST' enctype="multipart/form-data")
            div.form-group 
                label(for='image') Image upload: 
                br 
                br 
                input#image.form-control(type="file" name="image")
            br 
            button.btn.btn-primary(type='submit') Submit 
            if errors 
                ul
                for error in errors
                    li!=error.msg